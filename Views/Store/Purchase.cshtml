                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Orden 4 -->
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow cursor-pointer">
                    <div class="p-4 md:p-6">
                        <div class="flex flex-col md:flex-row md:justify-between md:items-center">
                            <div>
                                <div class="flex gap-3 items-center mb-2">
                                    <h3 class="text-lg font-semibold text-gray-800">Orden #12342</h3>
                                    <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs font-medium rounded-full">Completado</span>
                                </div>
                                <p class="text-gray-600 text-sm">Fecha: 25/03/2025</p>
                            </div>
                            <div class="mt-3 md:mt-0">
                                <p class="text-lg font-bold text-gray-800">$529.75</p>
