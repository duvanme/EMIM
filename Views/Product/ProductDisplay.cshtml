@using EMIM.ViewModels
@model ProductViewModel

<main>
    @await Component.InvokeAsync("BackButton")

    <section class="container mx-auto p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Imagen del producto -->
            <div class="flex flex-col">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="rounded-lg shadow-lg w-full">
            </div>

            <!-- Información del producto -->
            <div class="flex flex-col">
                <h1 class="text-2xl font-bold text-gray-800 mb-2">@Model.Name</h1>
                <h2 class="text-3xl text-gray-800 font-bold mb-4">@Model.Price.ToString("C")</h2>

                <div class="between flex gap-x-4">
                    <!-- Botón de carrito -->
                    <a href="@Url.Action("ShoppingCar", "General")"
                        class="w-full flex items-center justify-center bg-[#13678A] text-white py-3 rounded-lg shadow hover:bg-[#0D4F65]">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                            class="h-5 w-5 mr-2">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 3h2l.4 2M7 13h10l3.4-6H6.6M7 13l-1.3 6.4A1 1 0 007.7 21h8.6a1 1 0 001-.9l1.3-6.1M10 21a2 2 0 11-4 0M20 21a2 2 0 11-4 0" />
                        </svg>
                        Añadir al carrito
                    </a>

                    <!-- Botón de favoritos -->
                    <button
                        class="w-full flex items-center justify-center bg-[#13678A] text-white py-3 rounded-lg shadow hover:bg-[#0D4F65]">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                            class="h-5 w-5 mr-2">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M4 6a4 4 0 000 5.6L12 21l8-9.4a4 4 0 10-5.6-5.6L12 7l-2.4-2.4A4 4 0 004 6z" />
                        </svg>
                        Añadir a favoritos
                    </button>
                </div>

                <!-- Descripción -->
                <div class="mt-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-2">Descripción</h3>
                    <p class="text-sm text-gray-600">@Model.Description</p>
                </div>
            </div>
        </div>

        <!-- Sección de calificación mejorada -->
        <div class="rating-section mt-10 p-6 bg-white w-full md:w-2/3 mx-auto text-center">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Califica esta publicación</h3>

            <!-- Calificación con estrellas -->
            <div class="stars flex justify-center gap-2 mb-4">
                <span class="star text-gray-400 cursor-pointer text-3xl" data-value="1">★</span>
                <span class="star text-gray-400 cursor-pointer text-3xl" data-value="2">★</span>
                <span class="star text-gray-400 cursor-pointer text-3xl" data-value="3">★</span>
                <span class="star text-gray-400 cursor-pointer text-3xl" data-value="4">★</span>
                <span class="star text-gray-400 cursor-pointer text-3xl" data-value="5">★</span>
            </div>

            <!-- Sección de preguntas y respuestas -->
            <div class="qa-section mt-10 bg-white  w-full md:w-2/3 mx-auto">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">Preguntas y respuestas</h3>

                <!-- Botones de filtro -->
                <div class="flex gap-2 mb-4">
                    <button class="bg-gray-200 px-3 py-1 rounded-lg text-gray-700">Costo y tiempo de envío</button>
                    <button class="bg-gray-200 px-3 py-1 rounded-lg text-gray-700">Devoluciones gratis</button>
                    <button class="bg-gray-200 px-3 py-1 rounded-lg text-gray-700">Medios de pago</button>
                    <button class="bg-gray-200 px-3 py-1 rounded-lg text-gray-700">Garantía</button>
                </div>

                <!-- Input para preguntar -->
                <div class="flex items-center gap-2 mb-4">
                    <input type="text" id="questionInput" class="w-full border rounded-lg p-3"
                        placeholder="Pregúntale al vendedor">
                    <button class="bg-[#13678A] text-white px-4 py-2 rounded-lg hover:bg-[#0D4F65]">Preguntar</button>
                </div>

                <!-- Preguntas recientes -->
                <div class="questions-list">
                    <div class="border-b py-2">
                        <h3 class="text-lg font-semibold text-gray-800 mb-4">Preguntas más recientes</></h3>
                        <p class="text-sm text-gray-600"><strong>¿Dónde se encuentra?</strong></p>
                        <p class="text-sm text-gray-800">Estamos ubicados en Bogotá en el sector del lago <span
                                class="text-gray-500 text-xs">15/03/2025</span></p>
                    </div>
                    <div class="border-b py-2">
                        <p class="text-sm text-gray-600"><strong>¿Cuánto cuesta el monitor LG de 32”?</strong></p>
                        <p class="text-sm text-gray-800">Sería con monitor curvo LG de 32", wifi, teclado y mouse
                            inalámbrico por 650 mil adicionales <span class="text-gray-500 text-xs">15/03/2025</span>
                        </p>
                    </div>
                    <a href="#" class="text-blue-600 text-sm">Ver todas las preguntas</a>
                </div>
            </div>

    </section>
</main>

<script src="~/js/productDisplay.js"></script>