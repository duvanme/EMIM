<main>
    <section>
        <div class="flex justify-between items-center mx-2 p-5 px-20 m-4">
            <img src="../images/logo.jpeg" alt="logo" class="h-20 w-15 p-auto mx-4">
            <div class="text-right flex px-20 m-4">
                <p class="text-sm text-gray-600 p-2">¿Ya tienes una cuenta? <a href="#"
                        class="text-black decoration-1">Inicia sesión</a></p>
            </div>
        </div>
    </section>

    <section>
        <div class="container flex flex-col items-center min-h-screen bg-white md:flex-row md:px-20 m-4">
            <div id="image" class="hidden w-full h-full md:flex md:w-1/2">
                <img id="personal-image" src="../images/Register-personal.jpeg" alt="Imagen de fondo"
                    class="object-cover w-full h-full rounded-l-lg">
                <img id="emprendedor-image" src="../images/Register-emprendedor.jpeg" alt="Grupo de emprendedores"
                    class="object-cover w-full h-full rounded-l-lg hidden">
            </div>

            <form class="bg-white rounded  w-full md:w-1/2 mx-5" id="formulario">
                <h2 class="border font-bold text-4xl text-center h-16 p-2 text-gray-800 mb-6 rounded-lg"
                    style="background-color: #56b6cc;">Crear una
                    cuenta</h2>

                <!-- Botones Personal y Emprendedor -->
                <div class="flex justify-center items-center">
                    <div class="inline-flex bg-white rounded-full p-1 mb-6 shadow-lg">
                        <button id="btn-personal"
                            class="bg-gray-600 font-medium py-2 px-6 rounded-full focus:outline-none transition-colors duration-300 ease-in-out">
                            Personal
                        </button>
                        <button id="btn-emprendedor"
                            class="font-medium py-2 px-6 rounded-full focus:outline-none transition-colors duration-300 ease-in-out">
                            Emprendedor
                        </button>
                    </div>
                </div>

                <!-- Formulario personal -->
                <div id="personal-form">
                    <div class="flex justify-between mb-4">
                        <div class="w-1/2 mx-2">
                            <input type="text" id="nombre"
                                class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                placeholder="Nombre" />
                        </div>
                        <div class="w-1/2">
                            <input type="text" id="apellido"
                                class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                placeholder="Apellido" />
                        </div>
                    </div>

                    <div class="mb-4">
                        <input type="email" id="email"
                            class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                            placeholder="Correo electrónico" />
                    </div>

                    <div class="mb-4">
                        <input type="password" id="password"
                            class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                            placeholder="Contraseña" />
                        <div class="flex justify-content-between mx-2">
                            <img id="advertencia" src="../images/warning.png" class="h-4 w-4 mx-1">
                            <p class="text-sm text-right text-gray-600">Debe contener al menos 6 caracteres</p>
                        </div>
                    </div>

                    <div class="mb-4">
                        <input type="password" id="confirm-password"
                            class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                            placeholder="Confirmación de contraseña" />
                    </div>
                </div>
                <!-- formulario del emprendedor -->
                <div id="emprendedor-form" class="hidden">
                    <div class="mb-4">
                        <input type="text" class="w-full p-2 mb-4 border border-gray-300 rounded-full"
                            placeholder="Nombre del emprendimiento" />
                    </div>

                    <div class="mb-4">
                        <input type="email" class="w-full p-2 mb-4 border border-gray-300 rounded-full"
                            placeholder="Correo electrónico" />
                    </div>

                    <div class="mb-4">
                        <input type="password" class="w-full p-2 mb-4 border border-gray-300 rounded-full"
                            placeholder="Contraseña" />
                        <div class="flex justify-content-between mx-2">
                            <img id="advertencia" src="../images/warning.png" class="h-4 w-4 mx-1">
                            <p class="text-sm text-right text-gray-600">Debe contener al menos 6 caracteres</p>
                        </div>
                    </div>

                    <div class="mb-4">
                        <input type="password" class="w-full p-2 mb-4 border border-gray-300 rounded-full"
                            placeholder="Confirmación de contraseña" />
                    </div>

                    <div class="mb-4">
                        <input type="text" class="w-full p-2 mb-4 border border-gray-300 rounded-full"
                            placeholder="Donde está su emprendimiento" />
                    </div>
                </div>
                <p class="text-sm text-gray-700 ">Al seleccionar Crear cuenta, aceptas nuestras
                    <a href="#" class="text-blue-500">Condiciones de uso</a> y reconoces haber leído nuestro
                    <a href="#" class="text-blue-500">Aviso de privacidad</a>.
                </p>
                <div class="flex justify-center">
                    <button class="w-50 bg-blue-500 text-white font-bold py-2 px-4 mt-4 rounded hover:bg-blue-700"
                        style="background-color: #13678A;">Crear Cuenta</button>
                </div>
            </form>
        </div>
    </section>
</main>
<script src="../js/register.js"></script>