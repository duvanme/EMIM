@{
    ViewData["Title"] = "Home Page";

}

@await Html.PartialAsync("_Header")

@await Html.PartialAsync("_IndexExpandMenu")

<div id="default-carousel" class="relative w-full" data-carousel="slide">
    <!-- Carousel wrapper -->
    <div class="relative h-56 overflow-hidden rounded-lg md:h-96">
        <!-- Item 1 -->
        <div class="hidden duration-700 ease-in-out" data-carousel-item>
            <img src="~/images/banner4.jpg"
                 class="absolute block w-full h-full object-cover" alt="...">
        </div>
        <!-- Item 2 -->
        <div class="hidden duration-700 ease-in-out" data-carousel-item>
            <img src="~/images/banner2.jpg"
                 class="absolute block w-full h-full object-cover" alt="...">
        </div>
        <!-- Item 3 -->
        <div class="hidden duration-700 ease-in-out" data-carousel-item>
            <img src="~/images/banner1.jpg"
                 class="absolute block w-full w-full h-full object-cover" alt="...">
        </div>
        <!-- Item 4 -->
        <div class="hidden duration-700 ease-in-out" data-carousel-item>
            <img src="~/images/banner2.jpg"
                 class="absolute block w-full w-full h-full object-cover" alt="...">
        </div>
        <!-- Item 5 -->
        <div class="hidden duration-700 ease-in-out" data-carousel-item>
            <img src="~/images/banner1.jpg"
                 class="absolute block w-full w-full h-full object-cover" alt="...">
        </div>
    </div>
    <!-- Slider indicators -->
    <div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse">
        <button type="button" class="w-3 h-3 rounded-full" aria-current="true" aria-label="Slide 1"
                data-carousel-slide-to="0"></button>
        <button type="button" class="w-3 h-3 rounded-full" aria-current="false" aria-label="Slide 2"
                data-carousel-slide-to="1"></button>
        <button type="button" class="w-3 h-3 rounded-full" aria-current="false" aria-label="Slide 3"
                data-carousel-slide-to="2"></button>
        <button type="button" class="w-3 h-3 rounded-full" aria-current="false" aria-label="Slide 4"
                data-carousel-slide-to="3"></button>
        <button type="button" class="w-3 h-3 rounded-full" aria-current="false" aria-label="Slide 5"
                data-carousel-slide-to="4"></button>
    </div>
    <!-- Slider controls -->
    <button type="button"
            class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
            data-carousel-prev>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
            <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true"
                 xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M5 1 1 5l4 4" />
            </svg>
            <span class="sr-only">Previous</span>
        </span>
    </button>
    <button type="button"
            class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
            data-carousel-next>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
            <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true"
                 xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="m1 9 4-4-4-4" />
            </svg>
            <span class="sr-only">Next</span>
        </span>
    </button>
</div>

<div class="w-full flex justify-center my-[20px]">
    <div class="w-full flex-wrap gap-4 px-4 flex justify-around">

        <a class="card h-[300px] w-[185px] bg-white text-sm rounded-md shadow-lg shadow-gray-300/80 z-40">
            <div class="card-top h-[80%]">
                <p class="font-semibold pt-[10px] pl-[10px]">Envíos a tu ubicación</p>
                <div class="flex justify-center my-[5px]">
                    <img src="~/images/delivery-truck.svg" class="h-[100px] w-[100px]" alt="">
                </div>
                <p class="text-sm text-center">Varían costos y tiempos de entrega</p>
            </div>
            <div class="card-bottom w-full h-[20%] flex items-center justify-center">
                <span class="w-[70%] h-[20px] text-center bg-blue-400/40 rounded-sm text-xs text-blue-700">
                    Ingresa
                    tu ubicación
                </span>
            </div>
        </a>

        <a  asp-controller="account" asp-action="login"
            class="card h-[300px] w-[185px] bg-white text-sm rounded-md shadow-lg shadow-gray-300/80 z-40">
            <div class="card-top h-[80%]">
                <p class="font-semibold pt-[10px] pl-[10px]">Envíos gratis</p>
                <div class="flex justify-center my-[5px]">
                    <img src="~/images/box.svg" class="h-[100px] w-[80px]" alt="">
                </div>
                <p class="text-sm text-center">Beneficio por tu primera compra</p>
            </div>
            <div class="card-bottom w-full h-[20%] flex items-center justify-center">
                <span class="w-[70%] h-[20px] text-center bg-blue-400/40 rounded-sm text-xs text-blue-700">
                    Mostrar
                    Productos
                </span>
            </div>
        </a>

        <a asp-controller="home" asp-action="products" class="card h-[300px] w-[185px] bg-white text-sm rounded-md shadow-lg shadow-gray-300/80 z-40">
            <div class="card-top h-[80%]">
                <p class="font-semibold pt-[10px] pl-[10px]">Menos de $20,000</p>
                <div class="flex justify-center my-[5px]">
                    <img src="~/images/price.svg" class="h-[100px] w-[100px]" alt="">
                </div>
                <p class="text-sm text-center">Encuentra productos con precios bajos</p>
            </div>
            <div class="card-bottom w-full h-[20%] flex items-center justify-center">
                <span class="w-[70%] h-[20px] text-center bg-blue-400/40 rounded-sm text-xs text-blue-700">
                    Mostrar
                    Productos
                </span>
            </div>
        </a>

        <div class="card h-[300px] w-[185px] bg-white text-sm rounded-md shadow-lg shadow-gray-300/80 z-40">
            <div class="card-top h-[80%]">
                <p class="font-semibold pt-[10px] pl-[10px]">Ingresa a tu cuenta</p>
                <div class="flex justify-center my-[5px]">
                    <img src="~/images/login.svg" class="h-[100px] w-[100px]" alt="">
                </div>
                <p class="text-sm text-center">Encuentra las mejores ofertas y productos</p>
            </div>
            <div class="card-bottom w-full h-[20%] flex items-center justify-center">
                <span class="w-[70%] h-[20px] text-center bg-blue-400/40 rounded-sm text-xs text-blue-700">
                    Ingresa
                    a tu cuenta
                </span>
            </div>
        </div>

        <div class="card h-[300px] w-[185px] bg-white text-sm rounded-md shadow-lg shadow-gray-300/80 z-40">
            <div class="card-top h-[80%]">
                <p class="font-semibold pt-[10px] pl-[10px]">Medios de pago</p>
                <div class="flex justify-center my-[5px]">
                    <img src="~/images/card.svg" class="h-[100px] w-[100px]" alt="">
                </div>
                <p class="text-sm text-center">Paga de forma rápida y segura con Stripe</p>
            </div>
            <div class="card-bottom w-full h-[20%] flex items-center justify-center">
                <span class="w-[70%] h-[20px] text-center bg-blue-400/40 rounded-sm text-xs text-blue-700">
                    Acerca
                    de Stripe
                </span>
            </div>
        </div>

    </div>
</div>


@await Html.PartialAsync("_Footer")