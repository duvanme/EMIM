@using EMIM.ViewModel
@model VerifyCodeViewModel

@{
    ViewData["Title"] = "Verify Code";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";

}

@await Component.InvokeAsync("BackButton")

<main class="w-full h-screen flex justify-center items-center">
    <div class="max-w-lg w-full bg-white shadow-lg rounded-2xl p-11">
        <h1 class="text-2xl font-bold text-center text-gray-700">Verificar Código</h1>
        <form class="space-y-4 mt-4" asp-action="VerifyCode" method="post">
            <div asp-validation-summary="All" class="text-red-500 text-sm"></div>

            <input asp-for="Email" type="hidden" />
            <div class="flex flex-col">
                <label class="text-gray-600">Ingresa el código enviado a tu correo:</label>
                <input asp-for="Code"
                    class="w-full h-12 px-4 border rounded-full shadow focus:outline-none focus:ring-2 focus:ring-[#13678A] mt-1" />
                <span asp-validation-for="Code" class="text-danger-500"></span>
            </div>
            <div class="flex justify-center">
                <input
                    class="w-[150px] h-12 bg-[#56b6cc] text-white text-lg font-semibold rounded-lg shadow-lg hover:bg-[#13678A] transition"
                    type="submit" value="Verificar" />
            </div>
        </form>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}