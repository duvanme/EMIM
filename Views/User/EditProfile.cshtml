@using EMIM.ViewModel
@model UserProfileUpdateViewModel

<main>
    @await Component.InvokeAsync("BackButton")


    <section class="flex justify-center items-center w-full h-full">
        <div class="bg-white rounded-lg shadow-lg flex flex-col md:flex-row items-center justify-center w-4/5 p-6">
            <div class="flex flex-col justify-center items-center mb-8 w-full md:w-1/2">
                <div class="relative">
                    <img id="ImageProfile" src="img/" alt="User" class="w-[80%] h-[70%] rounded-full object-cover mb-4">
                    <input type="file" id="file-input" class="hidden" asp-for="ImageProfile" accept="image/*">
                    <button id="change-image-button" class="absolute bottom-0 right-0 bg-gray-200 rounded-full">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                    </button>
                </div>
            </div>

            <div class="flex flex-col justify-center items-center ml-8 md:flex h-full w-full md:w-1/2">
                <form method="post" id="user-edit-form">
                    <input type="hidden" asp-for="Id" id="user-id" value="" />
                    <div class="flex justify-between">
                        <div class="w-1/2 py-2 pr-2">
                            <label for="Address" class="flex justify-center items-center">Dirección</label>
                            <input type="text" id="Address"
                                class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                asp-for="Address" placeholder="Address" />
                        </div>
                        <div class="w-1/2 py-2">
                            <label for="Email" class="flex justify-center items-center">Correo</label>
                            <input type="email" id="Email"
                                class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                asp-for="Email" placeholder="Email" />
                        </div>
                    </div>

                    <div class="flex justify-between">
                        <div class="w-1/2 py-2 pr-2">
                            <label for="PhoneNumber" class="flex justify-center items-center">Número</label>
                            <input type="number" id="PhoneNumber"
                                class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                asp-for="PhoneNumber" placeholder="PhoneNumber" />
                        </div>
                        <div class="w-1/2 py-2">
                            <label for="BirthDate" class="flex justify-center items-center">Fecha nacimiento</label>
                            <input type="date" id="BirthDate"
                                class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                asp-for="BirthDate" placeholder="BirthDate" />
                        </div>
                    </div>

                    <div class="flex justify-center py-4">
                        <input class="bg-[#13678A] hover:bg-[#0D4F65] text-white font-bold py-2 px-8 rounded-lg"
                            placeholder="Guardar" type="submit" />
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>
<script src="~/js/editProfile.js"></script>