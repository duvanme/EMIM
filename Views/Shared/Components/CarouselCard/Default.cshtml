@using EMIM.ViewModel
@model List<HighlightedProductViewModel>


@foreach (var product in Model)
{

    <div class="swiper-slide bg-white flex flex-col mx-[15px] shadow-md rounded-lg overflow-hidden transform transition duration-300 hover:scale-105 cursor-pointer w-[250px]" data-url="@Url.Action("ProductDisplay", "Product", new { id = product.Id })">
        <!-- Product Image -->
        <img class="w-[95%] h-[230px] mx-auto mt-[10px]" src="@product.ImageUrl" alt="@product.Name">

        <!-- Text Content -->
        <div class="w-full px-4 py-2 text-black">
            <p class="text-[14px]">@product.Name</p>
            <p class="text-[16px] font-bold">@product.Price.ToString("C")</p>
        </div>

        <!-- Heart Icon -->
        <div class="absolute bottom-2 right-2">
            <img class="h-[20px] w-[20px]" src="~/images/heart.svg" alt="">
        </div>
    </div>
    
}



