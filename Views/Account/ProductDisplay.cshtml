<main>
    <section class="w-full">
        <nav style="background-color: #56b6cc;" class="flex flex-wrap items-center justify-between px-4 py-2">
            <!-- Logo -->
            <div class="flex items-center">
                <img src="../images/logo.jpeg" alt="logo" class="h-16 w-auto p-2">
            </div>

            <!-- Barra de búsqueda -->
            <form class="flex items-center w-full lg:w-auto max-w-md my-2 lg:my-0 lg:mx-4" action="/buscar"
                method="GET">
                <input type="text" name="query" placeholder="Buscar productos..."
                    class="flex-grow py-2 px-4 border border-gray-300 rounded-l-full focus:outline-none focus:ring-2 focus:ring-[#13678A]"
                    required>
                <button type="submit"
                    class="bg-white p-2 rounded-r-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#13678A]">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500" fill="none"
                        viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M21 21l-4.35-4.35M16.5 10a6.5 6.5 0 11-13 0 6.5 6.5 0 0113 0z" />
                    </svg>
                </button>
            </form>

            <!-- Enlaces y botones -->
            <div class="flex items-center gap-2">
                <a class="bg-[#13678A] text-white font-medium py-2 px-4 rounded-full focus:outline-none flex items-center"
                    href="profileUser.html">
                    Me
                    <img id="navbar-user-image" src="../images/user.jpeg" alt="user" class="h-6 w-6 ml-2 rounded-full">
                </a>
                <a class="bg-[#13678A] text-white font-medium py-2 px-4 rounded-full focus:outline-none flex items-center"
                    href="#">
                    Mi carrito
                    <img src="../images/carrito.png" alt="carrito" class="h-6 w-6 ml-2">
                </a>
                <!-- Icono de menú -->
                <button id="toggle-menu"
                    class="bg-[#13678A] text-white font-medium py-2 px-4 rounded-full focus:outline-none flex items-center">
                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </nav>
    </section>

    <section>
        <!--FLECHA HACIA ATRAS-->
        <div class="container">
            <div class="flex justify-start items-center p-4">
                <a class="focus:outline-none" href="profileUser.html">
                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                </a>
            </div>
        </div>
        <!--CONTENIDO DEL MENU-->
        <div
            class="menu-container bg-[#A9C8CF] rounded-lg shadow-lg flex-col md:flex-row items-center justify-center w-1/5  absolute top-15 right-1 hidden z-20">
            <div class="flex flex-col items-center justify-center">
                <b class="font-bold mb-2">Configuraciones</b>
                <hr class="mb-2">
                <a class="hover:text-gray-700 mb-1" href="EditProfile.cshtml">Actualizar datos</a>
                <a class="hover:text-gray-700 mb-1">Mis pedidos</a>
                <a class="hover:text-gray-700 mb-1" href="Reviews.cshtml">Mis reseñas</a>
                <a class="hover:text-gray-700 mb-1" href="Help.cshtml">Necesito ayuda</a>
                <hr class="my-2">
                <i class="text-gray-700">
                    <a class="hover:text-gray-700">Cerrar sesión</a>
                </i>
            </div>
        </div>
    </section>

    <section class="container mx-auto p-6">
        <!-- Contenido principal -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!--Imagenes del producto-->
            <div class="flex flex-col md:row">
                <!-- Imagen principal -->
                <div class="mb-4">
                    <img id="main-image" src="../images/img.jpg" alt="Producto principal" class="rounded-lg shadow-lg w-full">
                </div>

                <!-- Imágenes adicionales -->
                <div class="flex gap-2">
                    <img onclick="swapImages(this)" src="../images/img.jpg" alt=" 1"
                        class="h-24 w-24 rounded-lg shadow cursor-pointer">
                    <!-- Agrega más miniaturas si es necesario -->
                    <img onclick="swapImages(this)" src="../images/img.jpg" alt=" 2"
                        class="h-24 w-24 rounded-lg shadow cursor-pointer">
                </div>
            </div>

            <!-- Información del producto -->
            <div class="flex flex-col md:row">
                <h1 class="text-2xl font-bold text-gray-800 mb-2">Conjunto deportivo para mujer</h1>
                <p class="bg-[#BCF5BC] rounded-lg shadow-lg flex flex-row md:flex-col">Publicado por #perfil hace 3
                    semanas</p>

                <h2 class="text-3xl text-gray-800 font-bold mb-4">$58.000</h2>
                <!-- Opciones de compra -->
                <div class="grid grid-cols-2 gap-4 mb-6">
                    <div>
                        <label for="talla" class="block text-gray-600 mb-1">Talla</label>
                        <select id="talla" class="w-full border-gray-300 rounded-lg">
                            <option>Seleccionar</option>
                            <option>XS</option>
                            <option>S</option>
                            <option>M</option>
                            <option>L</option>
                            <option>XL</option>
                        </select>
                    </div>
                    <div>
                        <label for="color" class="block text-gray-600 mb-1">Color</label>
                        <select id="color" class="w-full border-gray-300 rounded-lg">
                            <option>Seleccionar</option>
                            <option>Negro</option>
                            <option>Gris</option>
                            <option>Blanco</option>
                        </select>
                    </div>
                </div>
                <div class="between flex gap-x-4">
                    <!-- Botón de carrito -->
                    <button
                        class="w-full flex items-center justify-center bg-[#13678A] text-white py-3 rounded-lg shadow hover:bg-[#0D4F65]">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                            class="h-5 w-5 mr-2">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 3h2l.4 2M7 13h10l3.4-6H6.6M7 13l-1.3 6.4A1 1 0 007.7 21h8.6a1 1 0 001-.9l1.3-6.1M10 21a2 2 0 11-4 0M20 21a2 2 0 11-4 0" />
                        </svg>
                        Añadir al carrito
                    </button>

                    <!-- Botón de favoritos -->
                    <button
                        class="w-full flex items-center justify-center bg-[#13678A] text-white py-3 rounded-lg shadow hover:bg-[#0D4F65]">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                            class="h-5 w-5 mr-2">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M4 6a4 4 0 000 5.6L12 21l8-9.4a4 4 0 10-5.6-5.6L12 7l-2.4-2.4A4 4 0 004 6z" />
                        </svg>
                        Añadir a favoritos
                    </button>
                </div>

                <!-- Descripción -->
                <div class="mt-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-2">Descripción</h3>
                    <p class="text-sm text-gray-600">
                        Patrón: Liso<br>
                        Estilo: Deportivo<br>
                        Material: 75% Poliéster, 30% Rayón<br>
                        Región de origen: Colombia
                    </p>
                </div>
            </div>
        </div>

        <!-- Sección de calificación -->
        <div class="rating-section mt-6">
            <h3 class="text-lg font-semibold mb-4">Califica esta publicación</h3>

            <!-- Calificación con estrellas -->
            <div class="stars flex gap-1 mb-4">
                <span class="star text-gray-400 cursor-pointer text-3xl" data-value="1">★</span>
                <span class="star text-gray-400 cursor-pointer text-3xl" data-value="2">★</span>
                <span class="star text-gray-400 cursor-pointer text-3xl" data-value="3">★</span>
                <span class="star text-gray-400 cursor-pointer text-3xl" data-value="4">★</span>
                <span class="star text-gray-400 cursor-pointer text-3xl" data-value="5">★</span>
            </div>

            <!-- Input para el comentario -->
            <textarea id="comment" rows="2" cols="2" class="w-[50%] border rounded-lg p-3 mb-4 "
                placeholder="Deja tu comentario aquí...">
                </textarea>

            <!-- Botón para enviar -->
            <button onclick="submitRating()"
                class="bg-[#13678A] text-white py-2 px-4 rounded-lg hover:bg-[#0D4F65]">Enviar</button>

            <!-- Mensaje de confirmación -->
            <div id="rating-message" class="mt-4 text-green-600 font-semibold hidden">
                <p>¡Gracias por tu calificación!</p>
            </div>
        </div>

        <!-- Chat de asistencia -->
        <div class="fixed bottom-4 right-4">
            <button id="toggle-chat" class="bg-blue-500 text-white p-2 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M8 10h8M8 14h8m-4 4l4 4-4-4-4 4 4-4zM4 4h16a2 2 0 012 2v12a2 2 0 01-2 2H4a2 2 0 01-2-2V6a2 2 0 012-2z" />
                </svg>
            </button>
            <div id="chat-container" class="bg-white shadow-md rounded-lg w-72 p-4 hidden">
                <div id="messages" class="h-64 overflow-y-scroll border border-gray-300 p-2 mb-4 rounded"></div>
                <div class="flex">
                    <input type="text" id="message-input" class="flex-1 border border-gray-300 p-2 rounded"
                        placeholder="Escribe un mensaje...">
                    <button id="send-button" class="bg-blue-500 text-white p-2 rounded ml-2">Enviar</button>
                </div>
            </div>
        </div>
    </section>
</main>
<script src="~/js/productDisplay.js"></script>