<!DOCTYPE html>
<html lang="en">
<header class="bg-[#56B6CC] p-4 flex justify-between items-center">
    <!-- Logo -->
    <div class="flex items-center">
        <img src="img/logo.png" alt="logo" class="h-16 w-auto p-2">
    </div>
    <!-- Barra de búsqueda -->
    <form class="flex items-center w-full lg:w-auto max-w-md lg:my-0 lg:mx-4" action="/buscar"
          method="GET">
        <input type="text" name="query" placeholder="Buscar productos..."
               class="flex-grow py-2 px-4 border border-gray-300 rounded-l-full focus:outline-none focus:ring-2 focus:ring-[#13678A]"
               required>
        <button type="submit"
                class="bg-white p-2 rounded-r-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#13678A]">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M21 21l-4.35-4.35M16.5 10a6.5 6.5 0 11-13 0 6.5 6.5 0 0113 0z" />
            </svg>
        </button>
    </form>
    <div class="flex items-center space-x-4">
        <div class="relative">
            <h1>ESTE ES EL LAYTOUT</h1>
            <button class="bg-[#A9C8CF] p-2 rounded-full border border-black shadow-md flex items-center space-x-4">
                <i class="fas fa-user">
                </i>
                <span>
                    SOLICITUDES
                </span>
                <span class="bg-red-500 text-white rounded-full px-2">
                    1
                </span>
            </button>
        </div>
        <button class="bg-[#13678A] p-2 rounded-full shadow-md w-10">
            <i class="fas fa-bars">
            </i>
        </button>
    </div>
</header>
<body>
    <div>
        @RenderBody()
    </div>
</body>
</html>