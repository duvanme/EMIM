@using EMIM.ViewModel
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
@if (TempData["Mensaje"] != null)
{
    <div id="alerta" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50">
        <div class="bg-white p-6 rounded-lg shadow-lg text-center">
            <p class="text-lg font-semibold mb-4">@TempData["Mensaje"]</p>
            <button id="aceptarMensaje" class="bg-[#56b6cc] hover:bg-[#13678A] transition text-white px-4 py-2 rounded-lg">
                Aceptar
            </button>
        </div>
    </div>
}
<main class="w-full h-screen flex justify-center items-center">
    <section class="w-11/12 md:w-4/5 max-w-4xl shadow-2xl flex flex-col md:flex-row rounded-2xl overflow-hidden">

        <!-- Sección Izquierda - Formulario -->
        <section class="w-full md:w-1/2 p-10 bg-white flex flex-col justify-center">

            <!-- Logo y texto de bienvenida en una línea -->
            <div class="flex items-center space-x-3 mb-6">
                <img src="../images/logo.jpeg" alt="logo" class="w-12 h-12">
                <p class="font-bold text-3xl">Hola de nuevo!</p>
            </div>

            <div class="mx-auto w-full max-w-md">
                <h6 class="font-bold text-xl text-center">Ingresar ahora</h6>

                <form class="space-y-4 mt-4" asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="w-auto h-auto"></div>

                    <input asp-for="Email" class="w-full h-[45px] px-4 py-2 border rounded-full shadow focus:outline-none focus:ring-2 focus:ring-[#13678A]" placeholder="Correo Electrónico" type="email" />
                    <span asp-validation-for="Email"></span>

                    <input asp-for="Password" class="w-full h-[45px] px-4 py-2 border rounded-full shadow focus:outline-none focus:ring-2 focus:ring-[#13678A]" placeholder="Contraseña" type="password" />
                    <span asp-validation-for="Password"></span>

                    <div class="flex items-center">
                        <input asp-for="RememberMe" type="checkbox" class="form-checkbox h-5 w-5 text-blue-600">
                        <span class="ml-2 text-gray-700">Recordar cuenta</span>
                    </div>

                    <div class="flex justify-center">
                        <button class="w-40 h-10  text-white rounded-lg shadow bg-[#56b6cc] hover:bg-[#13678A] transition" type="submit">Ingresar</button>
                    </div>

                    <div class="text-center text-sm">
                        <a asp-controller="General" asp-action="Help" class="text-gray-500 hover:underline">¿Tienes problemas para iniciar sesión?</a>
                    </div>
                </form>

                <div class="flex justify-between text-sm mt-4">
                    <a asp-controller="Account" asp-action="VerifyEmail" class="text-gray-500 hover:underline">Olvidé mi contraseña</a>
                    <a asp-controller="Account" asp-action="Register" class="text-gray-500 hover:underline">Crear cuenta en EMIM</a>
                </div>
            </div>
        </section>

        <!-- Sección Derecha - Información -->
        <section class="w-full md:w-1/2 bg-[#56b6cc] p-8 flex flex-col justify-center text-white rounded-br-2xl rounded-tr-none">

            <!-- Logo centrado -->
            <div class="text-center mb-11 ">
                <img src="../images/logo_sin_fondo.png" alt="logo" class="mx-auto w-20 h-20">
            </div>

            <div class="space-y-6">
                <div class="flex items-center">
                    <img src="../images/person-check.svg" class="w-6 h-6 mr-3" alt="">
                    <p class="text-sm font-semibold">Plataforma de e-commerce para emprendedores locales, enfocada en aumentar la visibilidad y ventas.</p>
                </div>
                <div class="flex items-center">
                    <img src="../images/heart.svg" class="w-6 h-6 mr-3" alt="">
                    <p class="text-sm font-semibold">Encuentra una gran variedad de productos únicos de emprendedores locales.</p>
                </div>
                <div class="flex items-center">
                    <img src="../images/people.svg" class="w-6 h-6 mr-3" alt="">
                    <p class="text-sm font-semibold">Apoya el comercio local y forma parte de una red de emprendedores que impulsa la economía de la comunidad.</p>
                </div>
                <div class="flex items-center">
                    <img src="../images/happy.svg" class="w-6 h-6 mr-3" alt="">
                    <p class="text-sm font-semibold">Accede a ofertas exclusivas y descuentos especiales en productos seleccionados.</p>
                </div>
            </div>
        </section>
    </section>
</main>

<script src="~/js/windowEmerge.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}