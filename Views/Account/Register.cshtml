@using EMIM.ViewModel;
@model RegisterViewModel

@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";

}


<main>
        <section>
            <div class="flex justify-between items-center mx-2 p-5 px-20 m-4">
                <img src="../images/logo.jpeg" alt="logo" class="h-20 w-15 p-auto mx-4">
                <div class="text-right flex px-20 m-4">
                    <p class="text-sm text-gray-600 p-2">¿Ya tienes una cuenta? <a href="Login.cshtml"
                            class="text-black decoration-1">Inicia sesión</a></p>
                </div>
            </div>
        </section>

        <section>
            <div class="container flex flex-col items-center min-h-screen bg-white md:flex-row md:px-20 m-4">
                <div id="image" class="hidden w-full h-full md:flex md:w-1/2">
                    <img id="personal-image" src="../images/Register-personal.jpeg" alt="Imagen de fondo"
                        class="object-cover w-full h-full rounded-l-lg">
                </div>

                <form method="post" class="bg-white rounded  w-full md:w-1/2 mx-5" id="formulario-registro">
                    <h2 class="border font-bold text-4xl text-center h-16 p-2 text-gray-800 mb-6 rounded-lg"
                        style="background-color: #56b6cc;">Crear una
                        cuenta</h2>

                    <div asp-validation-summary="ModelOnly" class="w-auto h-auto"> </div>

                    <!-- Botones Personal -->
                    <div class="flex justify-center items-center">                        
                            <p class="bg-gray-600 w-full font-medium py-2 px-6 rounded-full text-center p-1 mb-6">
                                Personal
                            </p>
                    </div>

                    <!-- Formulario personal -->
                    <div id="personal-form">
                        <div class="flex justify-between mb-4">
                            <div class="w-1/2 mx-2">
                                <input type="text" id="nombre"
                                    class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                    placeholder="Nombre" asp-for="FirstName" />
                                <span asp-validation-for="FirstName"></span>
                            </div>
                            <div class="w-1/2">
                                <input type="text" id="apellido"
                                    class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                    placeholder="Apellido" asp-for="LastName" />
                                <span asp-validation-for="LastName"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <input type="email" id="email"
                                class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                placeholder="Correo electrónico" asp-for="Email" />
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="mb-4">
                            <input type="password" id="password"
                                class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                placeholder="Contraseña" asp-for="Password" />
                            <span asp-validation-for="Password"></span>
                            
                        </div>

                        <div class="mb-4">
                            <input type="password" id="confirm-password"
                                class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                placeholder="Confirmación de contraseña" asp-for="ConfirmPassword" />
                            <span asp-validation-for="ConfirmPassword"></span>

                        </div>
                    </div>                    
                    <p class="text-sm text-gray-700 ">Al seleccionar Crear cuenta, aceptas nuestras
                        <a href="#" class="text-blue-500">Condiciones de uso</a> y reconoces haber leído nuestro
                        <a href="#" class="text-blue-500">Aviso de privacidad</a>.
                    </p>
                    <div class="flex justify-center">
                        <button class="w-50 bg-blue-500 text-white font-bold py-2 px-4 mt-4 rounded hover:bg-blue-700" style="background-color: #13678A;"  type="submit">Registar
                        </button>
                    </div>
                </form>
            </div>
        </section>
    </main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");

    }
}