@using EMIM.ViewModel
@model EditUserProfileViewModel

<main class="p-4 md:p-10">
    @await Component.InvokeAsync("BackButton")

    <section class="flex justify-center items-center w-full">
        <div class="w-full max-w-5xl bg-white shadow-xl rounded-2xl p-6 md:p-10">
            <form asp-action="EditUserProfile" id="user-edit-form" enctype="multipart/form-data" method="post">
                <div class="flex flex-col md:flex-row items-center md:items-start gap-10">

                    <!-- Profile Image -->
                    <div class="flex flex-col items-center w-full md:w-1/2">
                        <div class="relative w-48 h-48">
                            <img id="profile-image" src="~/images/@Model.UserProfilePicturePath" alt="User"
                                 class="w-full h-full rounded-full object-cover border shadow-md">
                            <input asp-for="UserProfilePicture" type="file" id="file-input" class="hidden" />
                            <button type="button" id="change-image-button"
                                    class="absolute bottom-2 right-2 bg-white border rounded-full p-2 shadow hover:bg-gray-100 transition">
                                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-5 w-5 text-gray-600">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M12 4v16m8-8H4" />
                                </svg>
                            </button>
                        </div>
                    </div>

                    <!-- User Details -->
                    <div class="w-full md:w-1/2 space-y-4">

                        <!-- First & Last Name -->
                        <div class="flex flex-col md:flex-row gap-4">
                            <div class="w-full">
                                <label for="nombre" class="text-sm font-semibold text-gray-600">Nombre</label>
                                <input type="text" id="nombre" asp-for="FirstName"
                                       class="mt-1 w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500"
                                       placeholder="Nombre" readonly />
                            </div>
                            <div class="w-full">
                                <label for="apellido" class="text-sm font-semibold text-gray-600">Apellido</label>
                                <input type="text" id="apellido" asp-for="LastName"
                                       class="mt-1 w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500"
                                       placeholder="Apellido" readonly />
                            </div>
                        </div>

                        <!-- Address & Email -->
                        <div class="flex flex-col md:flex-row gap-4">
                            <div class="w-full">
                                <label for="direccion" class="text-sm font-semibold text-gray-600">Dirección</label>
                                <input type="text" id="direccion" asp-for="Address"
                                       class="mt-1 w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500"
                                       placeholder="Dirección" />
                            </div>
                            <div class="w-full">
                                <label for="correo" class="text-sm font-semibold text-gray-600">Correo</label>
                                <input type="email" id="correo" asp-for="Email"
                                       class="mt-1 w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500"
                                       placeholder="Correo" />
                            </div>
                        </div>

                        <!-- Phone & DOB -->
                        <div class="flex flex-col md:flex-row gap-4">
                            <div class="w-full">
                                <label for="celular" class="text-sm font-semibold text-gray-600">Celular</label>
                                <input type="number" id="celular" asp-for="PhoneNumber"
                                       class="mt-1 w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500"
                                       placeholder="Celular" />
                            </div>
                            <div class="w-full">
                                <label for="fechaNacimiento" class="text-sm font-semibold text-gray-600">
                                    Fecha de
                                    Nacimiento
                                </label>
                                <input type="date" id="fechaNacimiento" asp-for="DateOfBirth"
                                       class="mt-1 w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500"
                                       readonly />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="flex justify-center mt-10">
                    <input type="submit" value="Guardar"
                           class="bg-[#56b6cc] hover:bg-[#13678A] transition-colors text-white font-semibold py-2 px-8 rounded-lg shadow-md" />
                </div>
            </form>
        </div>
    </section>
</main>

<script src="~/js/editProfile.js"></script>
