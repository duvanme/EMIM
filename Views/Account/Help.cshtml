                <b class="font-bold mb-2">Configuraciones</b>
                <hr class="mb-2">
                <a class="hover:text-gray-700 mb-1" href="editProfile.html">Actualizar datos</a>
                <a class="hover:text-gray-700 mb-1">Mis pedidos</a>
                <a class="hover:text-gray-700 mb-1" href="reviews.html">Mis reseñas</a>
                <a class="hover:text-gray-700 mb-1">Necesito ayuda</a>
                <hr class="my-2">
                <i class="text-gray-700">
                    <a class="hover:text-gray-700">Cerrar sesión</a>
                </i>
            </div>
        </div>
    </section>

    <section class="flex justify-center w-full py-6">
        <div class="bg-white rounded-lg shadow-lg w-4/5 p-6">
            <h2 class="text-3xl text-center font-bold mb-4 ">Necesito ayuda</h2>
            <form id="help-form">
                <div class="flex flex-col md:flex-row md:justify-center">
                    <div class="w-full md:w-1/2 py-2 md:pr-2">
                        <label for="nombre" class="flex text-left">Nombre</label>
                        <input type="text" id="nombre"
                            class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    </div>
                    <div class="w-full md:w-1/2 py-2">
                        <label for="correo" class="flex text-left">Correo</label>
                        <input type="email" id="correo"
                            class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    </div>
                </div>
                <div class="flex flex-col">
                    <label for="asunto" class="flex text-left">Asunto</label>
                    <input type="text" id="asunto"
                        class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>
                <div class="flex flex-col">
                    <label for="descripcion" class="flex text-left">Descrpción</label>
                    <textarea type="text" id="descripcion" rows="8" cols="5"
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        </textarea>
                </div>
                <div class="flex justify-center py-4">
                    <button class="bg-[#13678A] hover:bg-[#0D4F65] text-white font-bold py-2 px-8 rounded-lg">
                        Enviar
                    </button>
                </div>
            </form>
        </div>
