<main class="w-full h-full flex flex-col justify-center items-center">

  <button onclick="window.history.back();"
    class="bg-white text-center w-48 rounded-2xl h-14 relative text-black text-xl font-semibold group self-start"
    type="button">
    <div
      class="bg-blue-200 rounded-xl h-12 w-1/4 flex items-center justify-center absolute left-1 top-[4px] group-hover:w-[184px] z-10 duration-500">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024" height="25px" width="25px">
        <path d="M224 480h640a32 32 0 1 1 0 64H224a32 32 0 0 1 0-64z" fill="#000000"></path>
        <path
          d="m237.248 512 265.408 265.344a32 32 0 0 1-45.312 45.312l-288-288a32 32 0 0 1 0-45.312l288-288a32 32 0 1 1 45.312 45.312L237.248 512z"
          fill="#000000"></path>
      </svg>
    </div>
    <p class="translate-x-2">Regresar</p>
  </button>

  <section class="w-full max-w-4xl h-auto md:h-[350px] shadow-2xl flex flex-col md:flex-row rounded-2xl mt-8 p-4">
    <!--imagen -->
    <section class="flex items-center justify-center w-full md:w-1/2">
      <img src="../images/store_profile_picture.png" alt="logo"
        class="w-[200px] h-[200px] md:w-[250px] md:h-[250px] lg:w-[350px] lg:h-[350px] rounded-full">
    </section>

    <!-- Sección del texto -->
    <div class="text-gray-800 text-sm font-medium px-4 py-3 flex flex-col justify-center w-full md:w-2/3">

      <!-- Botones -->
      <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
        <a
          class="bg-blue-200 text-black font-medium text-sm px-4 py-1 rounded-full shadow-md hover:bg-blue-300 mb-2 md:mb-0">
          12 productos publicados
        </a>
        <a class="bg-blue-200 text-black font-medium text-sm px-4 py-1 rounded-full shadow-md hover:bg-blue-300">
          35 seguidores
        </a>
      </div>


      <h1 class="font-bold text-lg text-center md:text-left">Andrea Zapata</h1>
      <hr class="border-t border-gray-400 my-2">
      <h1 class="font-bold text-lg text-center md:text-left">La Casa del Fitness</h1>
      <p class="text-base text-center md:text-left">Encuentra la comodidad en cada detalle</p>
      <hr class="border-t border-gray-400 my-2">
      <p class="text-center md:text-left">Emprendimiento creado el: 14/05/2024</p>

      <!-- Rating -->
      <label class="self-center mt-[20px]">
        <input type="checkbox" checked="" class="peer hidden" />
        <div
          class="group flex w-fit cursor-pointer items-center gap-2 overflow-hidden rounded-full border border-amber-500 fill-none p-2 px-3 font-extrabold text-amber-500 transition-all peer-checked:fill-amber-500 peer-checked:hover:text-white active:scale-90">
          <div class="z-10 transition group-hover:translate-x-4">RECOMENDADO</div>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
            class="size-6 transition duration-500 group-hover:scale-[1500%] group-hover:-translate-x-10">
            <path
              d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z"
              stroke-linejoin="round" stroke-linecap="round"></path>
          </svg>
        </div>
      </label>

    </div>

    <!-- Botón de edición -->
    <button class="flex justify-center items-center mt-4 md:mt-[-300px]">
      <img src="../images/edit.png" alt="edit" class="w-6 h-6">
    </button>
  </section>

  <!-- Contenedor de productos -->
<div class="flex justify-between items-center px-4 md:px-8 lg:px-16 mt-8">
  <h1 class="font-bold text-lg text-center">Productos</h1>

  <button id="redirectButton"
    class="group cursor-pointer outline-none hover:rotate-90 duration-300"
    title="Add New">
    <svg class="stroke-teal-500 fill-none group-hover:fill-teal-800 group-active:stroke-teal-200 group-active:fill-teal-600 group-active:duration-0 duration-300"
      viewBox="0 0 24 24" height="50px" width="50px" xmlns="http://www.w3.org/2000/svg">
      <path stroke-width="1.5" d="M12 22C17.5 22 22 17.5 22 12C22 6.5 17.5 2 12 2C6.5 2 2 6.5 2 12C2 17.5 6.5 22 12 22Z"></path>
      <path stroke-width="1.5" d="M8 12H16"></path>
      <path stroke-width="1.5" d="M12 16V8"></path>
    </svg>
  </button>
</div>

<script>
    document.getElementById("redirectButton").addEventListener("click", function () {
        window.location.href = "@Url.Action("NewProduct", "Product")";
    });
</script>

  
  <hr class="border-t border-gray-400 my-2 w-11/12 max-w-4xl">

  

  <!-- Cartas -->
  <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 p-4 max-w-6xl w-full">

    <div class="bg-white shadow-md rounded-lg overflow-hidden w-full max-w-[280px] mx-auto">
      <img src="../images/product1.png" alt="Producto 1" class="w-full h-36 object-cover rounded-md mb-3">
      <div class="p-3">
        <h3 class="text-sm font-semibold">Conjunto deportivo para mujer</h3>
        <p class="text-gray-600 text-sm">$58.000</p>
        <button class="mt-2 text-gray-500 hover:text-red-500">
          <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-5 h-5">
            <path
              d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" />
          </svg>
        </button>

        <a href="@Url.Action("EditProduct", "Product")" class="flex justify-center items-center">
          <img src="~/images/edit.png" alt="edit" class="w-6 h-6">
        </a>

      </div>
    </div>


    <div class="bg-white shadow-md rounded-lg overflow-hidden w-full max-w-[280px] mx-auto">
      <img src="../images/product2.png" alt="Producto 2" class="w-full h-40 object-cover">
      <div class="p-3">
        <h3 class="text-sm font-semibold">Uniforme de fútbol para niños</h3>
        <p class="text-gray-600 text-sm">$58.000</p>
        <button class="mt-2 text-gray-500 hover:text-red-500">
          <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-5 h-5">
            <path
              d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" />
          </svg>
        </button>

        <a href="@Url.Action("EditProduct", "Product")" class="flex justify-center items-center">
          <img src="~/images/edit.png" alt="edit" class="w-6 h-6">
        </a>

      </div>
    </div>


    <div class="bg-white shadow-md rounded-lg overflow-hidden w-full max-w-[280px] mx-auto">
      <img src="../images/product3.png" alt="Producto 3" class="w-full h-40 object-cover">
      <div class="p-3">
        <h3 class="text-sm font-semibold">Conjunto deportivo para mujer</h3>
        <p class="text-gray-600 text-sm">$58.000</p>
        <button class="mt-2 text-gray-500 hover:text-red-500">
          <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-5 h-5">
            <path
              d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" />
          </svg>
        </button>

        <a href="@Url.Action("EditProduct", "Product")" class="flex justify-center items-center">
          <img src="~/images/edit.png" alt="edit" class="w-6 h-6">
        </a>

      </div>
    </div>
  </section>

</main>
