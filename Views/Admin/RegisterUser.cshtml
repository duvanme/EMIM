@model EMIM.ViewModel.AdminViewModel
@{
    ViewData["Title"] = "adminProfileView";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main>
    @await Component.InvokeAsync("BackButton")

    <!--FORMULARIO DE REGISTRO-->
    <section class="flex justify-center w-full py-6">
        <div class="bg-white rounded-lg justify-center shadow-lg w-auto p-6">
            <form method="post" class="bg-white rounded w-auto mx-5">
                <h2 class="border font-bold text-4xl text-center h-16 p-2 text-gray-800 mb-6 rounded-lg"
                    style="background-color: #56b6cc;">Crear cuenta</h2>
                <!-- Muestra los errores de validacion -->
                <div asp-validation-summary="ModelOnly" class="w-auto h-auto"> </div>
                <div id="personal-form">
                    <div class="flex justify-between mb-4">
                        <div class="w-1/2">
                            <input type="text"
                                class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500 required"
                                placeholder="Nombre" asp-for="FirstName" />
                            <span asp-validation-for="FirstName" class="text-red-500"></span>
                        </div>
                        <div class="w-1/2">
                            <input type="text"
                                class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                placeholder="Apellido" asp-for="LastName" />
                            <span asp-validation-for="LastName" class="text-red-500"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <input type="email"
                            class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                            placeholder="Correo electrónico" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-red-500"></span>
                    </div>

                    <div class="mb-4">
                        <label for="Role" class="block text-sm font-medium text-gray-500">Seleccionar rol:</label>
                        <select asp-for="Role"
                            class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="Customer">Cliente</option>
                            <option value="Admin">Administrador</option>
                        </select>
                        <span asp-validation-for="Role" class="text-red-500"></span>
                    </div>

                    <p class="text-sm text-gray-700">
                        Al seleccionar Crear cuenta, aceptas nuestras
                        <a href="#" class="text-blue-500">Condiciones de uso</a> y reconoces haber leído nuestro
                        <a href="#" class="text-blue-500">Aviso de privacidad</a>.
                    </p>
                    <div class="flex justify-center">
                        <button class="w-50 bg-[#56b6cc] hover:bg-[#13678A] transition text-white font-bold py-2 px-4 mt-4 rounded"
                             type="submit">Registrar
                        </button>
                    </div>
            </form>
        </div>
    </section>
</main>
