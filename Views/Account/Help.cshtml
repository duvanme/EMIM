                    required>
                <button type="submit"
                    class="bg-white p-2 rounded-r-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#13678A]">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500" fill="none"
                        viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M21 21l-4.35-4.35M16.5 10a6.5 6.5 0 11-13 0 6.5 6.5 0 0113 0z" />
                    </svg>
                </button>
            </form>

            <!-- Enlaces y botones -->
            <div class="flex items-center gap-2">
                <a class="bg-[#13678A] text-white font-medium py-2 px-4 rounded-full focus:outline-none flex items-center"
                    href="profileUser.html">
                    Me
                    <img id="navbar-user-image" src="img/user.jpeg" alt="user" class="h-6 w-6 ml-2 rounded-full">
                </a>
                <a class="bg-[#13678A] text-white font-medium py-2 px-4 rounded-full focus:outline-none flex items-center"
                    href="#">
                    Mi carrito
                    <img src="img/carrito.png" alt="carrito" class="h-6 w-6 ml-2">
