@using EMIM.ViewModel;
@model RegisterViewModel

@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<main class="bg-white min-h-screen">
    <!-- Header -->
    <section class="flex flex-col md:flex-row justify-between items-center px-6 md:px-20 py-5 border-b">
        <a href="@Url.Action("Index", "Home")">
            <img src="~/images/logo_sin_fondo.png" alt="logo" class="h-20 w-auto">
        </a>
        <div class="mt-4 md:mt-0 text-sm text-gray-600">
            ¿Ya tienes una cuenta?
            <a class="text-black underline ml-1" href="/Account/Login">Inicia sesión</a>
        </div>
    </section>

    <!-- Contenido -->
    <section class="flex flex-col md:flex-row items-center md:items-stretch md:px-20 py-10 gap-10">
        <!-- Imagen -->
        <div class="hidden md:block md:w-1/2 h-full md:flex md:justify-center">
            <img src="~/images/Register-personal.jpeg" alt="Imagen de fondo"
                 class="object-cover w-[70%] h-[70%] rounded-lg shadow-md">
        </div>

        <!--  Form -->
        <form method="post" class="w-full md:w-1/2 max-w-lg bg-white p-8 rounded-lg shadow-md mx-auto" id="formulario-registro">
            <h2 class="text-3xl font-bold text-center text-gray-800 mb-6 rounded-lg py-3"
                style="background-color: #56b6cc;">
                Crear una cuenta
            </h2>

            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

            <!-- Título -->
            <div class="bg-blue-200 text-center text-lg font-medium py-2 rounded-lg mb-6">
                Personal
            </div>

            <!-- Nombre y apellido -->
            <div class="flex flex-col md:flex-row gap-4 mb-4">
                <div class="w-full">
                    <input type="text" id="nombre" asp-for="FirstName"
                           class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                           placeholder="Nombre" />
                    <span asp-validation-for="FirstName" class="text-sm text-red-600"></span>
                </div>
                <div class="w-full">
                    <input type="text" id="apellido" asp-for="LastName"
                           class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                           placeholder="Apellido" />
                    <span asp-validation-for="LastName" class="text-sm text-red-600"></span>
                </div>
            </div>

            <!-- Email -->
            <div class="mb-4">
                <input type="email" id="email" asp-for="Email"
                       class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="Correo electrónico" />
                <span asp-validation-for="Email" class="text-sm text-red-600"></span>
            </div>

            <!-- Dirección -->
            <div class="mb-4">
                <input type="date" id="DateOfBirth" asp-for="DateOfBirth"
                       class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="Fecha De Nacimiento" />
                <span asp-validation-for="DateOfBirth" class="text-sm text-red-600"></span>
            </div>

            <!-- Dirección -->
            <div class="mb-4">
                <input type="text" id="address" asp-for="Address"
                       class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="Dirección" />
                <span asp-validation-for="Address" class="text-sm text-red-600"></span>
            </div>

            <!-- Contraseña -->
            <div class="mb-4">
                <input type="password" id="password" asp-for="Password"
                       class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="Contraseña" />
                <span asp-validation-for="Password" class="text-sm text-red-600"></span>
            </div>

            <!-- Confirmar contraseña -->
            <div class="mb-4">
                <input type="password" id="confirm-password" asp-for="ConfirmPassword"
                       class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="Confirmación de contraseña" />
                <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600"></span>
                <input type="hidden" asp-for="Role" value="Customer" />
            </div>

            <!-- Terminos y condiciones -->
            <p class="text-sm text-gray-700 mb-4">
                Al seleccionar Crear cuenta, aceptas nuestras
                <a href="#" class="text-blue-500 underline">Condiciones de uso</a> y reconoces haber leído nuestro
                <a href="#" class="text-blue-500 underline">Aviso de privacidad</a>.
            </p>

            <!-- Submit -->
            <div class="text-center">
                <button type="submit"
                        class="w-full md:w-auto px-6 py-2 font-bold bg-[#56b6cc] text-white rounded-lg shadow hover:bg-[#13678A] transition">
                    Registrar
                </button>
            </div>
        </form>
    </section>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");

    }
}


