@using EMIM.ViewModels
@model ProductViewModel


<main>
      @await Component.InvokeAsync("BackButton")


    <section class="flex justify-center w-full py-6">
        <div class="bg-white rounded-lg shadow-lg w-4/5 p-6 mx-auto">
            <h2 class="text-2xl text-center font-bold mb-4">Editar Producto</h2>
            @if (Model == null)
            {
                <p>Error: No se recibió un producto válido.</p>
            }

            <form asp-action="UpdateProduct" asp-controller="Product" method="post" enctype="multipart/form-data"
                class="grid grid-cols-2 md:grid-cols-1 gap-4">
                <input type="hidden" asp-for="Id" />

                <div class="col-span-2 md:col-span-1">
                    <label for="nombreproducto">Nombre del Producto</label>
                    <input asp-for="Name" class="w-full px-4 py-2 border rounded-full" />
                </div>

                <div>
                    <label for="image-update">Imagen del Producto</label>
                    <input type="file" asp-for="ImageFile" accept="image/*"
                        class="w-full px-4 py-2 border rounded-full" />
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="w-32 h-32 mt-2" />
                    }
                </div>

                <div class="col-span-2">
                    <label for="descripcionproducto">Descripción del Producto</label>
                    <textarea asp-for="Description" class="w-full px-4 py-2 border rounded-lg"></textarea>
                </div>

                <div>
                    <label for="precioproducto">Precio</label>
                    <input asp-for="Price" type="number" class="w-full px-4 py-2 border rounded-full" />
                </div>

                <div>
                    <label for="stockproducto">Stock</label>
                    <input asp-for="Quantity" type="number" class="w-full px-4 py-2 border rounded-full" />
                </div>

                <div>
                    <label for="categoriaproducto">Categoría</label>
                    <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))"
                        class="w-full px-4 py-2 border rounded-full">
                        <option value="">Seleccione una categoría</option>
                    </select>
                </div>

                <div>
                    <input type="hidden" asp-for="StoreId" />
                    <select asp-for="StoreId" asp-items="@(new SelectList(ViewBag.Stores, "Id", "Name"))"
                        class="w-full px-4 py-2 border rounded-full">
                        <option value="">Seleccione una tienda</option>
                    </select>
                </div>



                <div class="col-span-2 flex justify-end">
                    <button type="submit" class="bg-[#13678A] text-white font-bold py-2 px-8 rounded-lg">
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </section>
</main>
<script src="~/js/editProduct.js"></script>