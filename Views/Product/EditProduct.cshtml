<main>
    <button onclick="window.history.back();"
    class="bg-white text-center w-48 rounded-2xl h-14 relative text-black text-xl font-semibold group self-start"
    type="button">
    <div
      class="bg-blue-200 rounded-xl h-12 w-1/4 flex items-center justify-center absolute left-1 top-[4px] group-hover:w-[184px] z-10 duration-500">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024" height="25px" width="25px">
        <path d="M224 480h640a32 32 0 1 1 0 64H224a32 32 0 0 1 0-64z" fill="#000000"></path>
        <path
          d="m237.248 512 265.408 265.344a32 32 0 0 1-45.312 45.312l-288-288a32 32 0 0 1 0-45.312l288-288a32 32 0 1 1 45.312 45.312L237.248 512z"
          fill="#000000"></path>
      </svg>
    </div>
    <p class="translate-x-2">Regresar</p>
  </button>

    <section class="flex justify-center w-full py-6">
        <div class="bg-white rounded-lg shadow-lg w-4/5 p-6 mx-auto">
            <h2 class="text-2xl text-center font-bold mb-4">Editar Producto</h2>
            <form id="new-product-form" class="grid grid-cols-2 md:grid-cols-1 gap-4">
                <!-- Columna izquierda -->
                <div class="col-span-2 md:col-span-1">
                    <label for="nombreproducto" class="block text-left">Nombre del Producto</label>
                    <input type="text" id="nombreproducto"
                        class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>
                <!--Insertar imagenes-->
                <div class="col-span-2 md:col-span-1 flex flex-col items-center">
                    <div id="image-preview"
                        class="w-32 h-32 border border-gray-300 rounded-lg flex items-center justify-center flex-wrap overflow-hidden">
                        <input type="file" id="image-update" multiple accept="image/*" class="hidden">
                        <button id="edit-image-button" class="text-gray-400 p-2 rounded">Editar Imagen</button>
                    </div>
                </div>

                <!-- Modal -->
                <div id="image-modal"
                    class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
                    <div class="bg-white rounded-lg p-4 w-2/3 max-h-[80vh] overflow-y-auto">
                        <h2 class="text-lg font-bold mb-4">Editar Imagen</h2>
                        <!-- Contenedor de imágenes -->
                        <div id="image-gallery" class="flex flex-wrap justify-center mb-4">
                            <!-- Las imágenes se agregarán -->
                        </div>
                        <input type="file" id="image-input" accept="image/jpeg,image/jpg" multiple class="flex mb-4 gap-2 p-2 rounded" />
                        <button id="close-modal" class="bg-red-500 text-white p-2 rounded">Cerrar</button>
                    </div>
                </div>


                <div class="col-span-2">
                    <label for="descripcionproducto" class="block text-left">Descripción del Producto</label>
                    <textarea id="descripcionproducto" rows="4"
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                </div>

                <div class="">
                    <label for="precioproducto" class="block text-left md:flex-col">Precio del Producto</label>
                    <input type="number" id="precioproducto"
                        class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>

                <div>
                    <label for="stockproducto" class="block text-left">Stock del Producto</label>
                    <input type="number" id="stockproducto"
                        class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>

                <div>
                    <label for="coloresproducto" class="block text-left">Colores del Producto</label>
                    <input type="text" id="coloresproducto"
                        class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>

                <div>
                    <label for="tallasproducto" class="block text-left">Tallas/Tamaños</label>
                    <input type="text" id="tallasproducto"
                        class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>

                <div class="col-span-2">
                    <label for="categoriaproducto" class="block text-left">Categoría</label>
                    <select id="categoriaproducto"
                        class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">Seleccione una categoría</option>
                        <option value="ropa">Ropa</option>
                        <option value="electrodomesticos">Electrodomésticos</option>
                        <option value="juguetes">Juguetes</option>
                    </select>
                </div>

                <div class="col-span-2 flex justify-end">
                    <button type="submit"
                        class="bg-[#13678A] hover:bg-[#0D4F65] text-white font-bold py-2 px-8 rounded-lg">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </section>
</main>
<script src="~/js/editProduct.js"></script>