@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tienda EMIM</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
</head>

<body>
    @if (User.Identity.IsAuthenticated)
    {
        <nav class="bg-[#56B6CC] p-4 flex justify-between items-center">
            <!-- Logo -->
            <div class="flex items-center">
                <img src="~/images/logo_sin_fondo.png" alt="logo" class="h-16 w-auto p-2">
            </div>

            <div class="flex items-center space-x-6">
                <a class="bg-[#A9C8CF] p-2 rounded-full border border-black shadow-md flex items-center space-x-4" asp-controller="Admin" asp-action="AdminCreationShop">
                    <i class="fas fa-user"></i>
                    <span>SOLICITUDES</span>
                    <span class="bg-red-500 text-white rounded-full px-2">1</span>
                </a>

                <a class="block px-4 py-2 text-white hover:text-gray-800 mb-1" asp-controller="Admin" asp-action="HelpQuestion">Preguntas de ayuda</a>

                <a class="block px-4 py-2 text-white hover:text-gray-800 mb-1" asp-controller="Admin"
                    asp-action="RegisterUser">Registrar Usuarios</a>
                <a class="block px-4 py-2 text-white hover:text-red-400 mb-1" asp-controller="Account" asp-action="Logout">
                    Cerrar sesión
                </a>
            </div>
        </nav>
    }
    else
    {
        <div class="text-center py-20">
            <h2 class="text-2xl text-red-600">Acceso denegado</h2>
            <p class="text-gray-600">Debes iniciar sesión como Administrador para ver esta página.</p>
        </div>
    }
    <main main role="main" class="w-full">
        @RenderBody()
    </main>

    <footer>
        @await Html.PartialAsync("_Footer")
    </footer>

</body>

</html>