<body class="bg-gray-100">
    <main>
        <section class="container mx-auto p-6">
                @await Component.InvokeAsync("BackButton")

            <div class="mb-8 flex justify-between items-center">
                <h1 class="text-2xl font-bold text-gray-800">Mis Órdenes</h1>
                <div class="flex gap-2">
                    <select class="bg-white border border-gray-300 rounded-lg px-4 py-2 text-gray-700">
                        <option value="all">Todos los estados</option>
                        <option value="pagado">Pagado</option>
                        <option value="empacando">Empacando</option>
                        <option value="reparto">En reparto</option>
                        <option value="completado">Completado</option>
                    </select>
                    <select class="bg-white border border-gray-300 rounded-lg px-4 py-2 text-gray-700">
                        <option value="recent">Más recientes</option>
                        <option value="older">Más antiguas</option>
                        <option value="expensive">Mayor precio</option>
                        <option value="cheaper">Menor precio</option>
                    </select>
                </div>
            </div>

            <!-- Lista de órdenes -->
            <div class="space-y-4">
                <!-- Orden 1 -->
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow cursor-pointer">
                    <div class="p-4 md:p-6">
                        <div class="flex flex-col md:flex-row md:justify-between md:items-center">
                            <div>
                                <div class="flex gap-3 items-center mb-2">
                                    <h3 class="text-lg font-semibold text-gray-800">Orden #12345</h3>
                                    <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Pagado</span>
                                </div>
                                <p class="text-gray-600 text-sm">Fecha: 09/04/2025</p>
                            </div>
                            <div class="mt-3 md:mt-0">
                                <p class="text-lg font-bold text-gray-800">$794.97</p>
                                <p class="text-xs text-gray-500">2 productos</p>
                            </div>
                        </div>
                        
                        <div class="mt-4 pt-4 border-t border-gray-100">
                            <div class="flex flex-wrap gap-2">
                                <img src="/api/placeholder/50/50" alt="Producto" class="w-12 h-12 rounded-md object-cover">
                                <img src="/api/placeholder/50/50" alt="Producto" class="w-12 h-12 rounded-md object-cover">
                            </div>
                            <div class="flex justify-between items-center mt-4">
                                <p class="text-sm text-gray-600">Entrega estimada: 13-29 de abril</p>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Orden 2 -->
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow cursor-pointer">
                    <div class="p-4 md:p-6">
                        <div class="flex flex-col md:flex-row md:justify-between md:items-center">
                            <div>
                                <div class="flex gap-3 items-center mb-2">
                                    <h3 class="text-lg font-semibold text-gray-800">Orden #12344</h3>
                                    <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded-full">Empacando</span>
                                </div>
                                <p class="text-gray-600 text-sm">Fecha: 05/04/2025</p>
                            </div>
                            <div class="mt-3 md:mt-0">
                                <p class="text-lg font-bold text-gray-800">$129.99</p>
                                <p class="text-xs text-gray-500">1 producto</p>
                            </div>
                        </div>
                        
                        <div class="mt-4 pt-4 border-t border-gray-100">
                            <div class="flex flex-wrap gap-2">
                                <img src="/api/placeholder/50/50" alt="Producto" class="w-12 h-12 rounded-md object-cover">
                            </div>
                            <div class="flex justify-between items-center mt-4">
                                <p class="text-sm text-gray-600">Entrega estimada: 10-20 de abril</p>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Orden 3 -->
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow cursor-pointer">
                    <div class="p-4 md:p-6">
                        <div class="flex flex-col md:flex-row md:justify-between md:items-center">
                            <div>
                                <div class="flex gap-3 items-center mb-2">
                                    <h3 class="text-lg font-semibold text-gray-800">Orden #12343</h3>
                                    <span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-xs font-medium rounded-full">En reparto</span>
                                </div>
                                <p class="text-gray-600 text-sm">Fecha: 01/04/2025</p>
                            </div>
                            <div class="mt-3 md:mt-0">
                                <p class="text-lg font-bold text-gray-800">$349.50</p>
                                <p class="text-xs text-gray-500">3 productos</p>
                            </div>
                        </div>
                        
                        <div class="mt-4 pt-4 border-t border-gray-100">
                            <div class="flex flex-wrap gap-2">
