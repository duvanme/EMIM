@using EMIM.ViewModel
@model EditUserProfileViewModel

<main>
    @await Component.InvokeAsync("BackButton")


    <section class="flex justify-center items-center w-full h-full">
        
            <div class="flex flex-col justify-center items-center ml-8 md:flex h-full w-full md:w-1/2">

            

                <form asp-action="EditUserProfile" id="user-edit-form" enctype="multipart/form-data" method="post">


                <div class="bg-white rounded-lg shadow-lg flex flex-col md:flex-row items-center justify-center w-4/5 p-6">
                    <div class="flex flex-col justify-center items-center mb-8 w-full md:w-1/2">
                        <div class="relative">
                            <img id="profile-image" src="~/images/@Model.UserProfilePicture" alt="User"
                                 class="w-[80%] h-[70%] rounded-full object-cover mb-4">
                            <input asp-for="UserProfilePicture" type="file" id="file-input"/>
                            <button id="change-image-button" class="absolute bottom-0 right-0 bg-gray-200 rounded-full">
                                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                </svg>
                            </button>
                        </div>
                    </div>


                    <div class="flex justify-between">
                        <div class="w-1/2 py-2 pr-2">
                            <label for="nombre" class="flex justify-center items-center">Nombre</label>
                            <input type="text" id="nombre" asp-for="FirstName"
                                   class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   placeholder="Nombre" readonly />
                        </div>
                        <div class="w-1/2 py-2">
                            <label for="apellido" class="flex justify-center items-center">Apellido</label>
                            <input type="text" id="apellido" asp-for="LastName"
                                   class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   placeholder="Apellido" readonly />
                        </div>
                    </div>

                    <div class="flex justify-between">
                        <div class="w-1/2 py-2 pr-2">
                            <label for="direccion" class="flex justify-center items-center">Dirección</label>
                            <input type="text" id="direccion" asp-for="Address"
                                   class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   placeholder="Dirección" />
                        </div>
                        <div class="w-1/2 py-2">
                            <label for="correo" class="flex justify-center items-center">Correo</label>
                            <input type="email" id="correo" asp-for="Email"
                                   class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   placeholder="Correo" />
                        </div>
                    </div>

                    <div class="flex justify-between">
                        <div class="w-1/2 py-2 pr-2">
                            <label for="celular" class="flex justify-center items-center">Celular</label>
                            <input type="number" id="celular" asp-for="PhoneNumber"
                                   class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   placeholder="Celular" />
                        </div>
                        <div class="w-1/2 py-2">
                            <label for="fechaNacimiento" class="flex justify-center items-center">Fecha de Nacimiento</label>
                            <input type="date" id="fechaNacimiento" asp-for="DateOfBirth"
                                   class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   placeholder="Fecha de Nacimiento" readonly />
                        </div>
                    </div>

                    <div class="flex justify-center py-4">
                        <input type="submit" class="bg-[#56b6cc] hover:bg-[#13678A] transition text-white font-bold py-2 px-8 rounded-lg" placeholder="Guardar" />
                            
                    </div>
                </form>


            </div>
        </div>
    </section>
</main>
<script src="~/js/editProfile.js"></script>