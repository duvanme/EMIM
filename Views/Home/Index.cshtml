@{
    ViewData["Title"] = "Home Page";
}
<div class="w-auto h-auto flex">
<aside class="w-1/4 bg-[#D1E2E5] p-4 rounded-md shadow-md">
    <h2 class="text-lg font-bold mb-2">Categorías</h2>
    <ul class="space-y-2">
        <li class="bg-[#A9C8CF] rounded-md">
            <button class="w-full text-left flex justify-between items-center">
                Ropa
                <i class="fas fa-chevron-down"></i>
            </button>
        </li>
        <li class="bg-[#A9C8CF] rounded-md">
            <button class="w-full text-left flex justify-between items-center">
                Tecnologia
                <i class="fas fa-chevron-down"></i>
            </button>
        </li>
        <li class="bg-[#A9C8CF] rounded-md">
            <button class="w-full text-left flex justify-between items-center">
                Juguetes
                <i class="fas fa-chevron-down"></i>
            </button>
        </li>
        <li class="bg-[#A9C8CF] rounded-md">
            <button class="w-full text-left flex justify-between items-center">
                Deportes
                <i class="fas fa-chevron-down"></i>
            </button>
        </li>
        <li class="bg-[#A9C8CF] rounded-md">
            <button class="w-full text-left flex justify-between items-center">
                Maquillaje
                <i class="fas fa-chevron-down"></i>
            </button>
        </li>
        <li class="bg-[#A9C8CF] rounded-md">
            <button class="w-full text-left flex justify-between items-center">
                Hogar
                <i class="fas fa-chevron-down"></i>
            </button>
        </li>
        <li class="bg-[#A9C8CF] rounded-md">
            <button class="w-full text-left flex justify-between items-center">
                Libros
                <i class="fas fa-chevron-down"></i>
            </button>
        </li>
        <li class="bg-[#A9C8CF] rounded-md">
            <button class="w-full text-left flex justify-between items-center">
                Herramientas
                <i class="fas fa-chevron-down"></i>
            </button>
        </li>
    </ul>
</aside>
    
<div style="display: flex; width: 100%; height:100%; flex-direction: column; gap: 20px;">
    <div style="margin-bottom: 50px; margin-left: 15px; width: 100%; height:250px; position:relative">
        <h1 class="text-2xl w-100 font-bold">Destacados <hr /></h1>

        <div style="width: 150px; height:150px; position:absolute; top: 50%; left: 50%; transform: translate(-50%, -50%)">
            <p class="align-content-center">Galeria</p>

        </div>
    </div>
    <h1 class="text-2xl font-bold" style="margin-left: 15px">Todos los productos <hr /></h1>

<div class="products-container">
    @await Component.InvokeAsync("ProductCard")
</div>

<style>
    .products-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); /* Columnas dinámicas */
        gap: 10px;
        margin-left: 15px;
    }
</style>
</div>
</div>