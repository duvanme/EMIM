<main>
    @await Component.InvokeAsync("BackButton")

    <section class="flex justify-center w-full py-6">
        <div class="bg-white rounded-lg shadow-lg w-4/5 p-6">
            <h2 class="text-2xl font-bold text-center mb-6">Preguntas de Productos</h2>

            <div class="w-full">
                <div class="grid grid-cols-2 font-semibold p-2 rounded-lg">
                    <span>Nombre del usuario</span>
                    <span>Pregunta</span>
                </div>

                @for (int i = 0; i < 5; i++)
                {
                    <div
                        class="flex items-center bg-[#469bae] text-white rounded-lg shadow-md p-4 my-2 cursor-pointer tarjeta-question">
                        <span class="w-1/2">Alejandra Orozco</span>
                        <span class="w-1/3">Sería con monitor curvo LG de 32", wifi, teclado y mouse</span>
                        <span class="w-1/6 text-right underline ver-mas-question">Ver más...</span>
                    </div>
                }
            </div>
        </div>
    </section>
</main>

<!-- MODAL -->
<div id="modalQuestions-overlay" class="fixed inset-0 bg-black bg-opacity-50 hidden justify-center items-center p-4">
    <div id="modalQuestions"
        class="bg-white rounded-lg shadow-lg w-full max-w-[90%] md:max-w-[60%] lg:max-w-[50%] p-6 overflow-y-auto max-h-[90vh]">
        <h2 class="text-2xl font-bold text-center mb-4">Pregunta del Usuario</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <p><strong>Nombre del usuario</strong></p>
                <p class="text-gray-500">Alejandra Orozco</p>

                <p><strong>Correo Electrónico</strong></p>
                <p class="text-gray-500">Aleja@gmail.com</p>

                <p><strong>Pregunta</strong></p>
                <p class="text-gray-500">Sería con monitor curvo LG de 32", wifi, teclado y mouse</p>
            </div>

            <div class="flex flex-col items-center">
                <p><strong>Nombre del producto</strong></p>
                <p class="text-gray-500 text-center">Tienda de ropa fashion creada por mí</p>
                <p><strong>Foto del producto</strong></p>
                <img src="https://via.placeholder.com/150" class="rounded-lg shadow-lg my-2 w-32 md:w-40">
            </div>
        </div>

        <!-- Input para escribir la respuesta -->
        <div class="mt-6">
            <label for="respuesta-question" class="block font-semibold text-gray-700">Escribir respuesta:</label>
            <textarea id="respuesta-question" class="w-full border rounded-lg p-3 mt-2" rows="3" placeholder="Escribe tu respuesta aquí..."></textarea>
        </div>

        <div class="flex flex-wrap justify-around mt-6 gap-2">
            <button class="bg-[#56b6cc] hover:bg-[#13678A] transition text-white px-4 py-2 rounded-lg shadow-md w-full md:w-auto">Responder</button>
            <button class="bg-red-600 text-white px-4 py-2 rounded-lg shadow-md w-full md:w-auto" id="cerrar-modalQuestions">Cancelar</button>
        </div>
    </div>
</div>

<script src="/js/modalQuestions.js"></script>
