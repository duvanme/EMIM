<header class="w-full h-[60px] bg-[#56b6cc] flex justify-center">
    <div class="w-[95%] h-full nav-bounds grid grid-cols-[15%_50%_35%] lg:grid-cols-[10%_80%_10%] gap-4 pt-[2px]">
        <!-- First row -->
        <div class="h-[50px] flex items-center justify-center">
            <img src="~/images/logo_sin_fondo.png" class="h-[45px] w-[40px] mr-[10px]" alt="logo">
            <div class="hidden md:flex px-4">
                <img src="~/images/location.png" class="h-[35px] w-[35px]" alt="">
                <span class="flex items-center text-white font-semibold text-xs">Tu Dirección</span>
            </div>
        </div>
        <div class="h-[50px] flex items-center justify-center">
            <form id="nav-search" class="w-full">
                <div class="relative w-full">
                    <input type="text"
                           class="w-full bg-white pl-3 pr-10 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 placeholder-gray-400"
                           placeholder="Buscar productos, marcas y más..." />
                    <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                        <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </div>
                </div>
            </form>
        </div>
        <div class="h-[50px] flex items-center justify-center">

            <span class="h-[40px] w-[40px] bg-gray-800 rounded-full text-white flex items-center justify-center">D</span>

            <img src="~/images/shopping-cart.svg" class="h-[30px] w-[30px] ml-4 mr-[10px]" alt="" id="burger-icon">
        </div>
    </div>
</header>
<div class="w-full bg-[#56b6cc] flex justify-center md:hidden border-x border-white/40">
    <img src="~/images/location.png" class="h-[35px] w-[35px]" alt="">
    <span class="flex items-center text-white font-semibold text-xs">Tu Dirección</span>
</div> 