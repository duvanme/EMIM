@model EMIM.ViewModels.ProductViewModel

<main>
      @await Component.InvokeAsync("BackButton")

    <section class="flex justify-center w-full py-6">
        <div class="bg-white rounded-lg shadow-lg w-4/5 p-6 mx-auto">
            <h2 class="text-2xl text-center font-bold mb-4">Nuevo Producto</h2>

            <form asp-action="CreateProduct" asp-controller="Product" method="post" enctype="multipart/form-data"
                class="grid grid-cols-2 md:grid-cols-1 gap-4">
                <!-- Nombre del Producto -->
                <div class="col-span-2 md:col-span-1">
                    <label for="Name" class="block text-left">Nombre del Producto</label>
                    <input type="text" id="Name" name="Name"
                        class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                        required />
                </div>

                <!-- Insertar imágenes -->
                <div class="col-span-2 md:col-span-1 flex flex-col items-center">
                    <label class="block text-left">Imagen del Producto</label>
                    <!-- Campo para subir imagen -->
                    <input type="file" id="ImageFile" name="ImageFile" accept="image/*" style="display: block !important; visibility: visible !important;"
                        class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500" />

                </div>

                <!-- Descripción -->
                <div class="col-span-2">
                    <label for="Description" class="block text-left">Descripción del Producto</label>
                    <textarea id="Description" name="Description" rows="4"
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                        required></textarea>
                </div>

                <!-- Precio -->
                <div>
                    <label for="Price" class="block text-left">Precio del Producto</label>
                    <input type="number" id="Price" name="Price" step="0.01"
                        class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                        required />
                </div>

                <!-- Stock -->
                <div>
                    <label for="Quantity" class="block text-left">Stock del Producto</label>
                    <input type="number" id="Quantity" name="Quantity"
                        class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                        required />
                </div>

                <!-- Categoría -->
                <div class="col-span-2">
                    <label for="CategoryId" class="block text-left">Categoría</label>
                    <select asp-for="CategoryId" class="form-control" required>
                        <option value="">Seleccione una categoría</option>
                        @if (ViewBag.Categories != null)
                        {
                            @foreach (var category in ViewBag.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        }
                        else
                        {
                            <option value="">No hay categorías disponibles</option>
                        }
                    </select>
                </div>

                <!-- Tienda -->
                <div class="col-span-2">
                    <label for="StoreId" class="block text-left">Tienda</label>
                    <input type="number" id="StoreId" name="StoreId"
                        class="w-full px-4 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                        required />
                </div>

                <!-- Botón de enviar -->
                <div class="col-span-2 flex justify-end">
                    <button type="submit"
                        class="bg-[#56b6cc] hover:bg-[#13678A] transition text-white font-bold py-2 px-8 rounded-lg">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </section>
</main>

<script src="~js/NewProduct.js"></script>
